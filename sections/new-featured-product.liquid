<h2>{{ section.settings.heading }}</h2>
<p>{{ section.settings.description }}</p>
<button>{{ section.settings.btl_label }}</button>
{% schema %}
{
  "name": "New Featured Product",
  "tag": "section",
  "class": "new_featured_product",
  "settings": [{
    "type": "text",
    "id": "heading",
    "label": "Heading",
    "default": "Add product title"
  },
  {
    "type": "richtext",
    "id": "description",
    "label": "Description",
    "default": "<p>Add product description</p>"
  },
  {
    "type": "text",
    "id": "btl_label",
    "label": "Button Label",
    "default": "Shop Now"
  },
  {
    "type": "url",
    "id": "btn_url",
    "label": "Button URL",
    "default": "Shop Now"
  }],
  	"blocks": [
     {
       "name": "Slide",
       "type": "slide",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         }
       ]
     }
   ],
  "presets": [{
    "name": "New Featured Section"
  }]
}
{% endschema %}
